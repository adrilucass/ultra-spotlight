{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "spotlight-ultra",
  "version": "0.1.0",
  "identifier": "com.spotlightultra.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "spotlight-ultra",
        "center": true,
        "width": 700,
        "height": 70,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "titleBarStyle": "Overlay",
        "transparent": true,
        "alwaysOnTop": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
